<argos-configuration>

  
  
  
  <framework>
    <experiment length="200" ticks_per_second="10" />
    <system threads="0" />
  </framework>

  <loop_functions library="./build/libloop_function.so" label="loop_function" output="output.txt">
    <params num_experiment="5" arena="Hexagonal" tam="grande" num_circles="1" mision="2" obstaculos="False" robots="30" />
  </loop_functions>

  <controllers>

    <lua_controller id="lua">
      <actuators>
        <differential_steering implementation="default" />
        <range_and_bearing implementation="default" />
        <leds implementation="default" medium="leds" />
      </actuators>
      <sensors>
        <differential_steering implementation="default" />
        <range_and_bearing implementation="medium" medium="rab" />
        <footbot_proximity implementation="default" show_rays="false" />
        <footbot_motor_ground implementation="rot_z_only" />
        <footbot_base_ground implementation="rot_z_only" />
        <colored_blob_omnidirectional_camera implementation="rot_z_only" medium="leds" show_rays="true" />
        <footbot_light implementation="rot_z_only" show_rays="false" />
      </sensors>
      <params script="/home/gmadro/swarm_robotics/SWARM_GENERATOR/Software-control/aggregation_spots.lua" />
    </lua_controller>

  </controllers>
  
  
  
  <arena size="15,15,1" center="0,0,0.5">

    <box id="1" size="0.1,6.0,0.2" movable="false"><body position="6.0,0,0" orientation="0,0,0" /></box><box id="2" size="0.1,6.0,0.2" movable="false"><body position="-6.0,0,0" orientation="0,0,0" /></box><box id="3" size="0.1,6.720000000000001,0.2" movable="false"><body position="-3.0,4.5,0" orientation="-65,0,0" /></box><box id="4" size="0.1,6.720000000000001,0.2" movable="false"><body position="3.0,4.5,0" orientation="65,0,0" /></box><box id="5" size="0.1,6.720000000000001,0.2" movable="false"><body position="-3.0,-4.5,0" orientation="65,0,0" /></box><box id="6" size="0.1,6.720000000000001,0.2" movable="false"><body position="3.0,-4.5,0" orientation="-65,0,0" /></box><light id="light" position="0,0,0.5" orientation="0,0,0" color="yellow" intensity="10.0" medium="leds" />
    <floor id="floor" source="loop_functions" pixels_per_meter="100" />

    <distribute id="robots">
      <position method="uniform" min="-6.0,-3.0,0" max="6.0,3.0,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="30" max_trials="100">
        <foot-bot id="fb" rab="1">
          <controller config="lua" />
        </foot-bot>
      </entity>
    </distribute>

  </arena>


  
  
  
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  
  
  
  <media>
    <range_and_bearing id="rab" index="grid" grid_size="1,1,1" />
    <led id="leds" index="grid" grid_size="1,1,1" />
  </media>

  
  
  
  <visualization>

  </visualization>

</argos-configuration>