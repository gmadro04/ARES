<argos-configuration>

  
  
  
  <framework>
    <experiment length="240" ticks_per_second="10" />
    <system threads="0" />
  </framework>

  <loop_functions library="./build/libloop_function.so" label="loop_function" output="output.txt">
    <params num_experiment="2" arena="Dodecagono" tam="pequena" num_circles="1" mision="1" obstaculos="False" robots="10" />
  </loop_functions>

  <controllers>

    <lua_controller id="lua">
