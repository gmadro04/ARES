    <distribute id="robots">
      <position method="uniform" min="-1.0,-2.0,0" max="1.0,2.0,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="10" max_trials="100">
        <foot-bot id="fb" rab="1">
          <controller config="lua" />
        </foot-bot>
      </entity>
    </distribute>

  </arena>


  
  
  
  <physics_engines>
